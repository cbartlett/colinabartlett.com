!!! 5
%html
  %head
    %title Colin A. Bartlett
    %style
      :sass
        @import url(http://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic,700italic&subset=latin,cyrillic)
        @import url(http://fonts.googleapis.com/css?family=Raleway:400,700,600)
        html
          background: url(/images/#{ %w(kiev1 kiev2 peter1 peter2 peter3 moscow1 souzdal1).sample }.jpg) no-repeat center center fixed
          -webkit-background-size: cover
          -moz-background-size: cover
          -o-background-size: cover
          background-size: cover
        body
          font-family: 'Raleway', 'Helvetica', 'Arial', sans-serif
          font-weight: 400
          text-align: center
          margin: 0 10px
          color: #3b2e2a
          font-size: 15px
        a
          text-decoration: underline
          color: #3b2e2a
          > :visited
            color: #3b2e2a
        h1
          margin: 0 0 .2em 0
        h1, h2
          text-transform: uppercase
          font-weight: 600
        h2,h3
          margin: 1.0em 0 .1em 0
        h3
          font-weight: 700
        p
          margin: 0 0 .3em 0
        .header
          overflow: hidden
          margin-bottom: 10px
          clear: both
          .item
            text-transform: uppercase
            margin-top: 25px
            font-size: 20px
            width: 168px
            float: left
            text-align: center
            a
              text-decoration: none
          .logo
            margin-top: 0
            font-weight: 400
            .first
              font-size: 47px
            .last
              margin-top: -10px
              font-size: 28px
        .center
          margin: 0 auto
          text-align: left
          width: 850px
          background-color: #fff
          padding: 10px 0
          border-right: 1px #000 solid
          border-left: 1px #000 solid
        .resume
          padding: 20px 50px
          margin: 20px
          header
            text-align: right
        footer
          overflow: hidden
          margin: 10px 20px 10px 10px
          background-color: #fff
          font-size: 12px
          > :first-child
            float: left
          > :last-child
            float: right
            text-align: right
            margin: 15px 0 0 0
            a
              display: block
              margin: 0 0 3px 0
              color: #333
              > :visited
                color: #333

  %body
    .center
      .header
        .item
          %a{href: '/'} Resume
        .item Consulting
        %h1.logo.item
          .first Colin
          .last Bartlett
        .item
          %a{href: '/contact'} Contact
        .item Blog
      .content
        = yield
      %footer
        %section
          %a{href: 'http://twitter.com/cbartlett'}<
            %img{src: 'twitter.png'}
          %a{href: 'http://facebook.com/cbartlett'}<
            %img{src: 'facebook.png'}
          %a{href: 'http://github.com/cbartlett'}<
            %img{src: 'github.png'}
        %section
          %a{href: 'Colin Bartlett resume.pdf'}
            PDF
          %a{href: 'https://github.com/cbartlett/colinabartlett.com'}
            Source
